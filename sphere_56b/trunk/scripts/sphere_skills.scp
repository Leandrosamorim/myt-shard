 if !(<src.targ.npc>==1) && !(<src.targ.npc>==13) // animal ou dragon
  src.sysmessage Voce nao pode domar isto...
  return 1
 endif
 // Capacidade de domar... 
 IF ( <eval (<src.taming> + <src.animallore>)/(2)> >= <src.targ.taming>)
  src.tag.tamingcapaz=1
 ENDIF
 //Consumir memorys
 src.consume 1 i_taming_able 
 src.consume 1 i_taming_unable 
 //Events
 src.events=+e_tamingcheck
 //Taming Function
 If (<src.tag.tamingcapaz> == 1 )
  src.newitem=i_taming_able 
  src.act.equip 
  src.act.link=<src.targ.uid> 
  src.act.timer=1 
  src.act.more=5 
 Else 
  src.newitem=i_taming_unable 
  src.act.equip 
  src.act.link=<src.targ.uid> 
  src.act.timer=1 
  src.act.more=5 
 endif 
// return 1 
endif 
return 1

