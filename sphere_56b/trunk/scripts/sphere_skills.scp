on=@start
if (<src.animallore> < 10)
 return 1
 src.action=
endif
src.action=
if (<src.findid.i_AnimalLore_dono> == 1) || (<src.findid.i_AnimalLore_fome> == 1) 
 src.sysmessage Aguarde um pouco...
 return 1
endif
// ###############
// Verificar alvos
if (<src.targ.uid> == <src.uid>)
 src.sysmessage Voce nao pode usar AnimalLore em si mesmo...
 return 1
endif
if (<src.targ.flags>&statf_dead)
 src.sysmessage Voce nao pode usar AnimalLore em mortos...
 return 1
endif
if (<src.targ.canseelos> == 0)
 src.sysmessage Seu alvo esta fora da linha de visao...
 return 1
endif
// ###############
// Gravando o alvo
src.tag.AnimalLorealvo=<src.targ.uid>
// ###############
// Removendo possiveis memorys
src.findid.i_AnimalLore_dono.remove
src.findid.i_AnimalLore_fome.remove
// ###############
// Abrindo menu de opcoes
src.menu m_AnimalLore_normal
return 1



