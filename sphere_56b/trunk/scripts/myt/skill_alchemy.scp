TYPE=t_eq_script
LAYER=layer_special

ON=@CREATE
attr=attr_can_decay

ON=@DCLICK
TARGET Selecione o reagente
return 1

ON=@TARGON_ITEM
 if (<cont.targ.type> != t_reagente)
  cont.sysmessagered Use o almofariz em reagentes.
  remove
  return 1
 endif
 cont.freeze
 more1=<cont.targ.more1>
 cont.tag.reag=<cont.targ.name>
 cont.consume 1 i_tubo
 cont.targ.amount=<eval <cont.targ.amount>-1>
 if (<cont.targ.amount> < 01)
  cont.targ.remove
 endif
 cont.targ.update
 more2=<R7,14>
 timer=1
 return 1
 
ON=@TARGON_CANCEL
remove
return 1

ON=@TIMER
 if (<more2>)
  more2=<more2>-1
  alc_falhar 1
  cont.clspk
  DORAND (5)
   cont.emotegreen misturando <cont.tag.reag>
   sfx 578
   sfx 578
  ENDDO
  timer=1  
  return 1
 else
  sfx 0240
  cont.alc_subir 1
  cont.newitem=i_tubo_cheio
  cont.act.more1=<more1>
  cont.act.more2=00
  cont.act.name=extrato de <cont.tag.reag>
  cont.act.cont <link>
  cont.act.find_color
  cont.tag.timer=
  cont.tag.reag=
  cont.emotegreen terminou
  cont.unfreeze
  remove
  return 1
 endif

