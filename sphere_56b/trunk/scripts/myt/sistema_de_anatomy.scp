//TAGS usadas:
//*****************************************************************************

//*****************************************************************************
//*****************************************************************************
// DEFNAMEs
//*****************************************************************************
//*****************************************************************************

[DEFNAME anatomy_msg]
antm_dex1= nao conseguir ficar parado em equilibrio
antm_dex2= muito desajeitado
antm_dex3= um pouco descordenado
antm_dex4= ter alguma agilidade
antm_dex5= um pouco agil
antm_dex6= muito agil
antm_dex7= extremamente agil
antm_dex8= extraordinariamente agil
antm_dex9= que se movimenta com grande velocidade
antm_dex10= ser uma das pessoas mais rapidas que voce ja viu
antm_dex11= possuir uma agilidade sobrenatural
 
antm_str1= ter dificuldades em lidar com pequenos objetos
antm_str2= muito fraco
antm_str3= fraco
antm_str4= ter uma forca normal
antm_str5= um pouco forte
antm_str6= muito forte
antm_str7= extremamente forte
antm_str8= extraordinariamente forte
antm_str9= forte como um touro
antm_str10= ser uma das pessoas mais fortes que voce ja viu
antm_str11= possuir uma forca sobrenatural

antm_stam1= cansado
antm_stam2= ofegante
antm_stam3= disposto

//*****************************************************************************
//*****************************************************************************
// FUNCTIONs
//*****************************************************************************
//*****************************************************************************

//*****************************************************************************
// sk_anatomy - anatomy skill
//*****************************************************************************

[FUNCTION sk_anatomy]

 if (<src.targ.canseelos> == 0)
  src.sysmessage Seu alvo esta fora da linha de visao...
  return 1
 elif (<src.targ.uid> == <src.uid>)
  src.sysmessage Voce nao pode usar Anatomy em si mesmo...
  return 1
 elif (<src.targ.isitem>)
  src.sysmessage Voce nao pode usar Anatomy em objetos...
  return 1
 elif (<src.targ.flags>&statf_dead)
  src.sysmessage Voce nao pode usar Anatomy em almas...
  return 1
 elif (<src.findid.i_anatomy_mry>)
  src.sysmessage Voce ainda nao pode usar Anatomy novamente...
  return 1
 endif

 src.say * Observando *
 src.newitem i_anatomy_mry
 NEW.more=<eval 11-(<src.anatomy>/100)>
  
 if ( <NEW.more> <= 0 )
  NEW.more=1
 endif
 
 NEW.link=<src.targ.uid>
 NEW.cont=<src.uid>
 NEW.timer=<src.act.more>

 return 1	
endif

//*****************************************************************************
//*****************************************************************************
// ITEMDEFs
//*****************************************************************************
//*****************************************************************************

[ITEMDEF i_anatomy_mry]
id=i_deed
name=Anatomy Memory
type=t_eq_script
layer=layer_special
weight=0

on=@timer

 if (<cont.canseelos <link>> == 0)
  link.message Seu alvo esta fora da linha de visao...
  remove
  return 1
 endif 
 
if ( <cont.anatomy> < 30.0 )
  LOCAL.dex=((<link.dex>/50)*5)+2
  LOCAL.str=((<link.str>/50)*5)+2
elif ( <cont.anatomy> < 70.0 )
  LOCAL.dex=((<link.dex>/20)*2)+1
  LOCAL.str=((<link.str>/20)*2)+1
else
  LOCAL.dex=(<link.dex>/10)+1
  LOCAL.str=(<link.str>/10)+1
endif

LOCAL.stam=((<link.stam>*3)/<link.dex>)+1

if ( <LOCAL.dex> > 11 )
  LOCAL.dex = 11
endif

if ( <LOCAL.str> > 11 )
  LOCAL.str = 11
endif

if ( <LOCAL.stam> > 3 )
  LOCAL.stam = 3
endif

link.message Parece <DEF.antm_dex<eval <LOCAL.dex>>>, <DEF.antm_str<eval <LOCAL.str>>> e <DEF.antm_stam<eval <LOCAL.stam>>>

skill_gain <cont>,skill_anatomy
remove
return 1

[EOF]