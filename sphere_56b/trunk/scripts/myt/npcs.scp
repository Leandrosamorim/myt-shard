[EVENTS e_icemade]
on=@hit
if ({0 3}==1)
 src.temp_effect 2
elif ({0 5}==1)
 src.temp_effect 3
endif
return 0

on=@gethit
if (<argn2>&dam_cold_old)
 dorand 3
  say=@021  *parece imune*
  say=@021  *intacto*
 enddo
 hits=<hits>+<argn1>
 return 1
endif
if (<argn2>&dam_fire)
 argn1=<argn1>*10/7
endif
return 0

