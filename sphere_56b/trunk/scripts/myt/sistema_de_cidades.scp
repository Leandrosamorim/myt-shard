  SPEECH -jobTOWNGuard
  TAG.TASK=GUARD_TASK_REMOVE
 ELSE
  say Seja mais <sex especifico/especifica>, <sex meu/minha> <sex senhor/senhora>.
 ENDIF
ENDIF

on=nao
on=esqueca
